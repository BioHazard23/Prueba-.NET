@model TalentoPlus.Application.DTOs.DashboardDto
@{
    ViewData["Title"] = "Dashboard";
}

<!-- Tarjetas de estad칤sticas -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="stat-card primary">
            <h3>@Model.TotalEmpleados</h3>
            <p>Total Empleados</p>
            <i class="bi bi-people-fill"></i>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card success">
            <h3>@Model.EmpleadosActivos</h3>
            <p>Activos</p>
            <i class="bi bi-person-check-fill"></i>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card info">
            <h3>@Model.EmpleadosVacaciones</h3>
            <p>En Vacaciones</p>
            <i class="bi bi-sun-fill"></i>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card warning">
            <h3>@Model.EmpleadosInactivos</h3>
            <p>Inactivos</p>
            <i class="bi bi-person-x-fill"></i>
        </div>
    </div>
</div>

<!-- Tablas de informaci칩n -->
<div class="row g-4">
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-building me-2"></i>Empleados por Departamento</h5>
            </div>
            <div class="card-body">
                @if (Model.EmpleadosPorDepartamento.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Departamento</th>
                                    <th class="text-end">Cantidad</th>
                                    <th style="width: 40%;">Proporci칩n</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var dept in Model.EmpleadosPorDepartamento)
                                {
                                    var percentage = Model.TotalEmpleados > 0 
                                        ? (dept.Cantidad * 100.0 / Model.TotalEmpleados) 
                                        : 0;
                                    var percentStr = percentage.ToString("F1", System.Globalization.CultureInfo.InvariantCulture);
                                    <tr>
                                        <td>@dept.Nombre</td>
                                        <td class="text-end">@dept.Cantidad</td>
                                        <td>
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar bg-primary" style="width: @(percentStr)%"></div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                        <p class="mt-2">No hay empleados registrados</p>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-briefcase me-2"></i>Empleados por Cargo</h5>
            </div>
            <div class="card-body">
                @if (Model.EmpleadosPorCargo.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Cargo</th>
                                    <th class="text-end">Cantidad</th>
                                    <th style="width: 40%;">Proporci칩n</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cargo in Model.EmpleadosPorCargo)
                                {
                                    var percentage = Model.TotalEmpleados > 0 
                                        ? (cargo.Cantidad * 100.0 / Model.TotalEmpleados) 
                                        : 0;
                                    var percentStr = percentage.ToString("F1", System.Globalization.CultureInfo.InvariantCulture);
                                    <tr>
                                        <td>@cargo.Nombre</td>
                                        <td class="text-end">@cargo.Cantidad</td>
                                        <td>
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar bg-success" style="width: @(percentStr)%"></div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                        <p class="mt-2">No hay empleados registrados</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Acciones r치pidas -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Acciones R치pidas</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <a asp-controller="Empleados" asp-action="Create" class="btn btn-outline-primary w-100 py-3">
                            <i class="bi bi-person-plus fs-4 d-block mb-2"></i>
                            Nuevo Empleado
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Import" asp-action="Index" class="btn btn-outline-success w-100 py-3">
                            <i class="bi bi-file-earmark-excel fs-4 d-block mb-2"></i>
                            Importar Excel
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Empleados" asp-action="Index" class="btn btn-outline-info w-100 py-3">
                            <i class="bi bi-list-ul fs-4 d-block mb-2"></i>
                            Ver Todos los Empleados
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chat Flotante de IA -->
<div id="ai-chat-container">
    <!-- Bot칩n flotante -->
    <button id="ai-chat-toggle" class="ai-fab" title="Asistente IA">
        <i class="bi bi-robot" id="fab-icon-open"></i>
        <i class="bi bi-x-lg d-none" id="fab-icon-close"></i>
        <span class="ai-fab-badge">IA</span>
    </button>
    
    <!-- Ventana de chat -->
    <div id="ai-chat-window" class="ai-chat-window">
        <div class="ai-chat-header">
            <div class="d-flex align-items-center">
                <div class="ai-avatar me-2">
                    <i class="bi bi-robot"></i>
                </div>
                <div>
                    <h6 class="mb-0">Asistente TalentoPlus</h6>
                    <small class="text-light opacity-75">Powered by Gemini</small>
                </div>
            </div>
            <button id="ai-chat-minimize" class="btn btn-link text-white p-0">
                <i class="bi bi-dash-lg"></i>
            </button>
        </div>
        
        <div id="ai-chat-messages" class="ai-chat-messages">
            <div class="ai-message">
                <div class="ai-msg-avatar">
                    <i class="bi bi-robot"></i>
                </div>
                <div class="ai-msg-content">
                    춰Hola! 游녦 Soy tu asistente de RRHH. Puedo ayudarte con informaci칩n sobre empleados, departamentos y salarios.
                </div>
            </div>
        </div>
        
        <div class="ai-chat-suggestions">
            <button class="ai-suggestion" data-query="쮺u치ntos empleados hay en total?">Total empleados</button>
            <button class="ai-suggestion" data-query="쮺u치l es el salario promedio?">Salario promedio</button>
            <button class="ai-suggestion" data-query="쮺u치ntos empleados hay por departamento?">Por departamento</button>
        </div>
        
        <div class="ai-chat-input">
            <input type="text" id="ai-input" placeholder="Escribe tu pregunta..." autocomplete="off">
            <button id="ai-send" type="button">
                <i class="bi bi-send-fill"></i>
            </button>
        </div>
    </div>
</div>

@section Styles {
<style>
    /* Chat flotante container */
    #ai-chat-container {
        position: fixed;
        bottom: 24px;
        right: 24px;
        z-index: 9999;
    }
    
    /* Bot칩n flotante (FAB) */
    .ai-fab {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        border: none;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        font-size: 1.5rem;
        cursor: pointer;
        box-shadow: 0 4px 20px rgba(102, 126, 234, 0.4);
        transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .ai-fab:hover {
        transform: scale(1.1);
        box-shadow: 0 6px 30px rgba(102, 126, 234, 0.5);
    }
    
    .ai-fab-badge {
        position: absolute;
        top: -4px;
        right: -4px;
        background: #10b981;
        color: white;
        font-size: 0.65rem;
        font-weight: 700;
        padding: 2px 6px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(16, 185, 129, 0.4);
    }
    
    /* Ventana de chat */
    .ai-chat-window {
        position: absolute;
        bottom: 75px;
        right: 0;
        width: 380px;
        height: 500px;
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.15);
        display: none;
        flex-direction: column;
        overflow: hidden;
        animation: slideUp 0.3s ease;
    }
    
    .ai-chat-window.active {
        display: flex;
    }
    
    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px) scale(0.95);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }
    
    /* Header del chat */
    .ai-chat-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 16px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    
    .ai-avatar {
        width: 40px;
        height: 40px;
        background: rgba(255,255,255,0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }
    
    /* 츼rea de mensajes */
    .ai-chat-messages {
        flex: 1;
        overflow-y: auto;
        padding: 16px;
        background: #f8f9fa;
    }
    
    .ai-message, .user-message {
        display: flex;
        gap: 10px;
        margin-bottom: 16px;
        animation: fadeIn 0.3s ease;
    }
    
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(8px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    .user-message {
        flex-direction: row-reverse;
    }
    
    .ai-msg-avatar, .user-msg-avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        font-size: 0.9rem;
    }
    
    .ai-msg-avatar {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
    
    .user-msg-avatar {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        color: white;
    }
    
    .ai-msg-content, .user-msg-content {
        max-width: 75%;
        padding: 10px 14px;
        border-radius: 16px;
        font-size: 0.9rem;
        line-height: 1.4;
    }
    
    .ai-msg-content {
        background: white;
        color: #333;
        border: 1px solid #e9ecef;
        border-top-left-radius: 4px;
    }
    
    .user-msg-content {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-top-right-radius: 4px;
    }
    
    .ai-msg-content.error {
        background: #fee2e2;
        border-color: #fecaca;
        color: #dc2626;
    }
    
    /* Sugerencias */
    .ai-chat-suggestions {
        padding: 8px 12px;
        background: white;
        border-top: 1px solid #e9ecef;
        display: flex;
        gap: 6px;
        flex-wrap: wrap;
    }
    
    .ai-suggestion {
        background: #f3f4f6;
        border: 1px solid #e5e7eb;
        border-radius: 16px;
        padding: 4px 12px;
        font-size: 0.75rem;
        color: #6b7280;
        cursor: pointer;
        transition: all 0.2s;
    }
    
    .ai-suggestion:hover {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-color: transparent;
    }
    
    /* Input del chat */
    .ai-chat-input {
        padding: 12px;
        background: white;
        border-top: 1px solid #e9ecef;
        display: flex;
        gap: 8px;
    }
    
    .ai-chat-input input {
        flex: 1;
        border: 1px solid #e5e7eb;
        border-radius: 24px;
        padding: 10px 16px;
        font-size: 0.9rem;
        outline: none;
        transition: all 0.2s;
    }
    
    .ai-chat-input input:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }
    
    .ai-chat-input button {
        width: 42px;
        height: 42px;
        border-radius: 50%;
        border: none;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .ai-chat-input button:hover {
        transform: scale(1.05);
    }
    
    .ai-chat-input button:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        transform: none;
    }
    
    /* Indicador de escritura */
    .typing-indicator {
        display: flex;
        gap: 4px;
        padding: 4px;
    }
    
    .typing-indicator span {
        width: 6px;
        height: 6px;
        background: #667eea;
        border-radius: 50%;
        animation: typing 1.4s infinite ease-in-out;
    }
    
    .typing-indicator span:nth-child(1) { animation-delay: 0s; }
    .typing-indicator span:nth-child(2) { animation-delay: 0.2s; }
    .typing-indicator span:nth-child(3) { animation-delay: 0.4s; }
    
    @@keyframes typing {
        0%, 60%, 100% { transform: translateY(0); opacity: 0.4; }
        30% { transform: translateY(-6px); opacity: 1; }
    }
    
    /* Responsive */
    @@media (max-width: 480px) {
        .ai-chat-window {
            width: calc(100vw - 32px);
            height: calc(100vh - 120px);
            bottom: 70px;
            right: -8px;
        }
    }
</style>
}

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const chatToggle = document.getElementById('ai-chat-toggle');
        const chatWindow = document.getElementById('ai-chat-window');
        const chatMinimize = document.getElementById('ai-chat-minimize');
        const chatInput = document.getElementById('ai-input');
        const chatSend = document.getElementById('ai-send');
        const chatMessages = document.getElementById('ai-chat-messages');
        const suggestions = document.querySelectorAll('.ai-suggestion');
        const fabIconOpen = document.getElementById('fab-icon-open');
        const fabIconClose = document.getElementById('fab-icon-close');

        // Toggle chat
        chatToggle.addEventListener('click', toggleChat);
        chatMinimize.addEventListener('click', toggleChat);

        function toggleChat() {
            chatWindow.classList.toggle('active');
            fabIconOpen.classList.toggle('d-none');
            fabIconClose.classList.toggle('d-none');
            if (chatWindow.classList.contains('active')) {
                chatInput.focus();
            }
        }

        // Enviar con Enter
        chatInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                sendMessage();
            }
        });

        // Bot칩n enviar
        chatSend.addEventListener('click', sendMessage);

        // Sugerencias
        suggestions.forEach(btn => {
            btn.addEventListener('click', function() {
                chatInput.value = this.dataset.query;
                sendMessage();
            });
        });

        async function sendMessage() {
            const query = chatInput.value.trim();
            if (!query) return;

            // Deshabilitar input
            chatInput.disabled = true;
            chatSend.disabled = true;

            // Agregar mensaje del usuario
            addMessage(query, 'user');
            chatInput.value = '';

            // Mostrar indicador de escritura
            const typingId = showTyping();

            try {
                const response = await fetch('@Url.Action("AskAI", "Dashboard")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ query: query })
                });

                const data = await response.json();
                removeTyping(typingId);

                if (data.success) {
                    addMessage(data.response, 'ai');
                } else {
                    addMessage(data.error || 'No pude procesar tu pregunta.', 'ai', true);
                }
            } catch (error) {
                removeTyping(typingId);
                addMessage('Error de conexi칩n. Intenta de nuevo.', 'ai', true);
            }

            // Rehabilitar input
            chatInput.disabled = false;
            chatSend.disabled = false;
            chatInput.focus();
        }

        function addMessage(text, type, isError = false) {
            const isUser = type === 'user';
            const formattedText = isUser ? escapeHtml(text) : formatResponse(text);
            
            const html = `
                <div class="${isUser ? 'user-message' : 'ai-message'}">
                    <div class="${isUser ? 'user-msg-avatar' : 'ai-msg-avatar'}">
                        <i class="bi bi-${isUser ? 'person-fill' : 'robot'}"></i>
                    </div>
                    <div class="${isUser ? 'user-msg-content' : 'ai-msg-content'}${isError ? ' error' : ''}">
                        ${formattedText}
                    </div>
                </div>
            `;
            chatMessages.insertAdjacentHTML('beforeend', html);
            scrollToBottom();
        }

        function showTyping() {
            const id = 'typing-' + Date.now();
            const html = `
                <div class="ai-message" id="${id}">
                    <div class="ai-msg-avatar">
                        <i class="bi bi-robot"></i>
                    </div>
                    <div class="ai-msg-content">
                        <div class="typing-indicator">
                            <span></span><span></span><span></span>
                        </div>
                    </div>
                </div>
            `;
            chatMessages.insertAdjacentHTML('beforeend', html);
            scrollToBottom();
            return id;
        }

        function removeTyping(id) {
            const el = document.getElementById(id);
            if (el) el.remove();
        }

        function scrollToBottom() {
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        function formatResponse(text) {
            text = escapeHtml(text);
            text = text.replace(/\n/g, '<br>');
            text = text.replace(/\*\*(.+?)\*\*/g, '<strong>$1</strong>');
            text = text.replace(/\*(.+?)\*/g, '<em>$1</em>');
            return text;
        }
    });
</script>
}
