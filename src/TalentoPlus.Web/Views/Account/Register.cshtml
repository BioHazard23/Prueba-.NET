@model TalentoPlus.Application.DTOs.RegisterAdminDto
@{
    ViewData["Title"] = "Registrar Administrador";
    Layout = "_Layout";
}

<style>
    .register-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 40px 20px;
    }
    
    .register-card {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 25px 50px rgba(0,0,0,0.2);
        padding: 50px;
        width: 100%;
        max-width: 480px;
    }
    
    .register-card .brand {
        text-align: center;
        margin-bottom: 30px;
    }
    
    .register-card .brand h2 {
        font-weight: 700;
        color: #1f2937;
    }
    
    .register-card .brand span {
        color: #667eea;
    }
    
    .form-floating {
        margin-bottom: 15px;
    }
    
    .form-control {
        border-radius: 10px;
        padding: 15px;
        height: auto;
    }
    
    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.2);
    }
    
    .btn-register {
        width: 100%;
        padding: 15px;
        border-radius: 10px;
        font-weight: 600;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
    }
    
    .login-link {
        text-align: center;
        margin-top: 25px;
    }
    
    .login-link a {
        color: #667eea;
        font-weight: 500;
    }
</style>

<div class="register-container">
    <div class="register-card">
        <div class="brand">
            <h2><span>Talento</span>Plus</h2>
            <p class="text-muted">Registro de Administrador</p>
        </div>
        
        <div class="alert alert-info mb-4">
            <i class="bi bi-info-circle me-2"></i>
            Solo se permite un administrador en el sistema.
        </div>
        
        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Nombres" class="form-control" placeholder="Nombres" />
                        <label asp-for="Nombres">Nombres</label>
                        <span asp-validation-for="Nombres" class="text-danger small"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Apellidos" class="form-control" placeholder="Apellidos" />
                        <label asp-for="Apellidos">Apellidos</label>
                        <span asp-validation-for="Apellidos" class="text-danger small"></span>
                    </div>
                </div>
            </div>
            
            <div class="form-floating">
                <input asp-for="Email" type="email" class="form-control" placeholder="correo@ejemplo.com" />
                <label asp-for="Email">Correo electrónico</label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            
            <div class="form-floating">
                <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" />
                <label asp-for="Password">Contraseña</label>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            
            <div class="form-floating">
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirmar Contraseña" />
                <label asp-for="ConfirmPassword">Confirmar Contraseña</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>
            
            <button type="submit" class="btn btn-primary btn-register mt-3">
                <i class="bi bi-person-plus me-2"></i>Crear Cuenta de Administrador
            </button>
        </form>
        
        <div class="login-link">
            <p class="text-muted mb-0">¿Ya tienes cuenta? <a asp-action="Login">Iniciar Sesión</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

