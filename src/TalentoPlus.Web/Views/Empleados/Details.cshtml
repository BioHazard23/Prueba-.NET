@model TalentoPlus.Application.DTOs.EmpleadoDto
@{
    ViewData["Title"] = "Detalle de Empleado";
}

<div class="row">
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body py-5">
                <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" 
                     style="width: 100px; height: 100px; font-size: 2.5rem;">
                    @Model.Nombres[0]@Model.Apellidos[0]
                </div>
                <h4>@Model.NombreCompleto</h4>
                <p class="text-muted mb-2">@Model.CargoNombre</p>
                <span class="badge bg-secondary mb-3">@Model.DepartamentoNombre</span>
                <div class="mt-3">
                    @switch (Model.Estado)
                    {
                        case TalentoPlus.Domain.Enums.EstadoEmpleado.Activo:
                            <span class="badge bg-success fs-6">Activo</span>
                            break;
                        case TalentoPlus.Domain.Enums.EstadoEmpleado.Inactivo:
                            <span class="badge bg-danger fs-6">Inactivo</span>
                            break;
                        case TalentoPlus.Domain.Enums.EstadoEmpleado.Vacaciones:
                            <span class="badge bg-info fs-6">En Vacaciones</span>
                            break;
                    }
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0"><i class="bi bi-telephone me-2"></i>Contacto</h6>
            </div>
            <div class="card-body">
                <p class="mb-2">
                    <i class="bi bi-envelope text-muted me-2"></i>
                    <a href="mailto:@Model.Email">@Model.Email</a>
                </p>
                <p class="mb-2">
                    <i class="bi bi-telephone text-muted me-2"></i>
                    @Model.Telefono
                </p>
                <p class="mb-0">
                    <i class="bi bi-geo-alt text-muted me-2"></i>
                    @Model.Direccion
                </p>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-person-badge me-2"></i>Información del Empleado</h5>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-pencil me-1"></i>Editar
                    </a>
                </div>
            </div>
            <div class="card-body">
                <h6 class="text-muted mb-3">Datos Personales</h6>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <label class="small text-muted">Documento</label>
                        <p class="mb-2"><strong>@Model.Documento</strong></p>
                    </div>
                    <div class="col-md-6">
                        <label class="small text-muted">Fecha de Nacimiento</label>
                        <p class="mb-2"><strong>@Model.FechaNacimiento.ToString("dd/MM/yyyy")</strong></p>
                    </div>
                </div>
                
                <hr />
                
                <h6 class="text-muted mb-3">Información Laboral</h6>
                <div class="row mb-4">
                    <div class="col-md-4">
                        <label class="small text-muted">Departamento</label>
                        <p class="mb-2"><strong>@Model.DepartamentoNombre</strong></p>
                    </div>
                    <div class="col-md-4">
                        <label class="small text-muted">Cargo</label>
                        <p class="mb-2"><strong>@Model.CargoNombre</strong></p>
                    </div>
                    <div class="col-md-4">
                        <label class="small text-muted">Fecha de Ingreso</label>
                        <p class="mb-2"><strong>@Model.FechaIngreso.ToString("dd/MM/yyyy")</strong></p>
                    </div>
                </div>
                
                <div class="row mb-4">
                    <div class="col-md-4">
                        <label class="small text-muted">Salario</label>
                        <p class="mb-2"><strong>$@Model.Salario.ToString("N0")</strong></p>
                    </div>
                    <div class="col-md-4">
                        <label class="small text-muted">Nivel Educativo</label>
                        <p class="mb-2"><strong>@Model.NivelEducativoNombre</strong></p>
                    </div>
                    <div class="col-md-4">
                        <label class="small text-muted">Estado</label>
                        <p class="mb-2"><strong>@Model.EstadoNombre</strong></p>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.PerfilProfesional))
                {
                    <hr />
                    <h6 class="text-muted mb-3">Perfil Profesional</h6>
                    <p class="mb-0">@Model.PerfilProfesional</p>
                }
            </div>
        </div>
        
        <div class="d-flex justify-content-between mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Volver a la lista
            </a>
            <div>
                <a asp-action="GenerarPdf" asp-route-id="@Model.Id" class="btn btn-success me-2" target="_blank">
                    <i class="bi bi-file-earmark-pdf me-1"></i>Descargar PDF
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                    <i class="bi bi-pencil me-1"></i>Editar
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                    <i class="bi bi-trash me-1"></i>Eliminar
                </a>
            </div>
        </div>
    </div>
</div>

