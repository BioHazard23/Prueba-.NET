@{
    ViewData["Title"] = "TalentoPlus - Sistema de RRHH";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Outfit', sans-serif;
            background: #0a0a0a;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        /* Navbar */
        .navbar-custom {
            padding: 2rem 0;
            position: absolute;
            width: 100%;
            z-index: 100;
        }
        
        .navbar-brand {
            font-size: 1.5rem;
            font-weight: 600;
            color: white !important;
            letter-spacing: -0.5px;
        }
        
        .navbar-brand span {
            color: #818cf8;
        }
        
        .btn-login {
            background: transparent;
            border: 1px solid rgba(255,255,255,0.2);
            color: rgba(255,255,255,0.8);
            padding: 0.6rem 1.5rem;
            border-radius: 8px;
            font-weight: 500;
            font-size: 0.9rem;
            transition: all 0.2s ease;
        }
        
        .btn-login:hover {
            background: white;
            color: #0a0a0a;
            border-color: white;
        }
        
        /* Hero */
        .hero {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 120px 20px 60px;
            position: relative;
        }
        
        .hero-content {
            text-align: center;
            max-width: 700px;
        }
        
        .hero-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: rgba(129, 140, 248, 0.1);
            border: 1px solid rgba(129, 140, 248, 0.2);
            color: #818cf8;
            padding: 8px 16px;
            border-radius: 50px;
            font-size: 0.85rem;
            font-weight: 500;
            margin-bottom: 2rem;
        }
        
        .hero-title {
            font-size: clamp(2.5rem, 6vw, 4rem);
            font-weight: 600;
            color: white;
            line-height: 1.1;
            margin-bottom: 1.5rem;
            letter-spacing: -1px;
        }
        
        .hero-subtitle {
            font-size: 1.1rem;
            color: rgba(255,255,255,0.5);
            margin-bottom: 3rem;
            line-height: 1.7;
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
        }
        
        .hero-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
        }
        
        .btn-primary-custom {
            background: white;
            border: none;
            color: #0a0a0a;
            padding: 1rem 2rem;
            border-radius: 10px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.2s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }
        
        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(255,255,255,0.1);
            color: #0a0a0a;
        }
        
        .btn-secondary-custom {
            background: transparent;
            border: 1px solid rgba(255,255,255,0.15);
            color: rgba(255,255,255,0.7);
            padding: 1rem 2rem;
            border-radius: 10px;
            font-weight: 500;
            font-size: 1rem;
            transition: all 0.2s ease;
        }
        
        .btn-secondary-custom:hover {
            background: rgba(255,255,255,0.05);
            border-color: rgba(255,255,255,0.25);
            color: white;
        }
        
        /* Gradient orb */
        .gradient-orb {
            position: absolute;
            width: 600px;
            height: 600px;
            border-radius: 50%;
            filter: blur(120px);
            opacity: 0.15;
            pointer-events: none;
        }
        
        .orb-1 {
            background: #818cf8;
            top: 10%;
            right: 10%;
        }
        
        .orb-2 {
            background: #6366f1;
            bottom: 10%;
            left: 10%;
        }
        
        /* Footer minimal */
        .footer-minimal {
            padding: 2rem 0;
            text-align: center;
            color: rgba(255,255,255,0.3);
            font-size: 0.85rem;
        }
    </style>
</head>
<body>
    <!-- Gradient orbs -->
    <div class="gradient-orb orb-1"></div>
    <div class="gradient-orb orb-2"></div>

    <!-- Navbar -->
    <nav class="navbar-custom">
        <div class="container d-flex justify-content-between align-items-center">
            <a class="navbar-brand" href="/">
                Talento<span>Plus</span>
            </a>
            <a href="/Account/Login" class="btn btn-login">
                Iniciar Sesión
            </a>
        </div>
    </nav>

    <!-- Hero -->
    <section class="hero">
        <div class="hero-content">
            <div class="hero-badge">
                <i class="bi bi-building"></i>
                Sistema de Recursos Humanos
            </div>
            <h1 class="hero-title">
                Gestiona tu equipo de trabajo
            </h1>
            <p class="hero-subtitle">
                Plataforma integral para la administración de empleados, departamentos y procesos de RRHH.
            </p>
            <div class="hero-buttons">
                <a href="/Account/Login" class="btn btn-primary-custom">
                    Acceder al sistema
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer-minimal">
        <div class="container">
            TalentoPlus S.A.S.
        </div>
    </footer>
</body>
</html>
